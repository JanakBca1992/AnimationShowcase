<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.github.zawadz88.animation.showcase.AnimationActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/expandcollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/checkable_expandcollapse_selector"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/star_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:layout_below="@id/expandcollapse"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/star_selector" />

</RelativeLayout>
